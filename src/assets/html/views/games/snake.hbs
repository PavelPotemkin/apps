  .snake {
    display: grid;
    grid-template-rows: repeat(10, 1fr);
  }
  
  .snake__row {
    display: grid;
    grid-template-columns: repeat(15, 1fr);
  }
  
  .snake__col {
    aspect-ratio: 1;
  }

  .snake__row:nth-child(odd) .snake__col:nth-child(odd) {
    background-color: darkgrey;
  }

  .snake__row:nth-child(odd) .snake__col:nth-child(even) {
    background-color: lightgrey;
  }


  .snake__row:nth-child(even) .snake__col:nth-child(even) {
    background-color: darkgrey;
  }

  .snake__row:nth-child(even) .snake__col:nth-child(odd) {
